# E-commerce Support AI - Environment Configuration

# ===================
# Backend Configuration
# ===================

# Environment
ENVIRONMENT=development  # development | production

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================
# Database Configuration
# ===================

# Redis (caching, rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# MongoDB (query logging)
MONGODB_URL=mongodb://localhost:27017/ecommerce_support
MONGODB_USERNAME=
MONGODB_PASSWORD=

# ===================
# LLM Configuration
# ===================

# Model paths
BASE_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
LORA_MODEL_PATH=./llm/models/ecommerce-support-lora

# Inference
USE_GPU=false  # true for GPU inference
QUANTIZATION_BITS=4  # 4 or 8
MAX_NEW_TOKENS=512
TEMPERATURE=0.7

# ===================
# RAG Configuration
# ===================

# Vector store
FAISS_INDEX_PATH=./rag/vectorstore/faiss.index
CHUNKS_PATH=./rag/vectorstore/chunks.pkl

# Embeddings
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Retrieval
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.5

# ===================
# Guardrails
# ===================

CONFIDENCE_THRESHOLD=0.7
MAX_RESPONSE_LENGTH=500
MIN_RESPONSE_LENGTH=20

# ===================
# Monitoring
# ===================

# Prometheus
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FILE=./logs/app.log

# ===================
# Frontend Configuration
# ===================

# API URL (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===================
# Security
# ===================

# API Keys (production)
# API_KEY_SECRET=your-secret-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Session
# SESSION_SECRET=your-session-secret

# ===================
# Optional Services
# ===================

# Weights & Biases (experiment tracking)
# WANDB_API_KEY=your-wandb-key
# WANDB_PROJECT=ecommerce-support-ai

# Sentry (error tracking)
# SENTRY_DSN=your-sentry-dsn
